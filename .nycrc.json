{
  "extends": "@istanbuljs/nyc-config-typescript",
  "cache": false,
  "check-coverage": false,
  "extension": [
    ".js",
    ".ts",
    ".tsx"
  ],
  "include": [ "src/**" ],
  "exclude": [
    "coverage/**",
    "node_modules/**",
    "**/*.d.ts",
    "**/*.test.ts"
  ],
  "sourceMap": true,
  "reporter": [
    "html",
    "text",
    "text-summary"
  ],
  "all": true,
  "instrument": true
}